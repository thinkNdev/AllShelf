<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/bookinfo_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="3dp"
        android:onClick="bookinfo_close"
        android:layout_gravity="right"
        android:background="@drawable/ic_close_black_24dp"
        />

    <ImageView
        android:id="@+id/bookinfo_img"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="도서명"/>
        <TextView
            android:id="@+id/bookinfo_bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="저자명"/>
        <TextView
            android:id="@+id/bookinfo_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="출판사"/>
        <TextView
            android:id="@+id/bookinfo_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="출간일"/>
        <TextView
            android:id="@+id/bookinfo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="60dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="ISBN"/>
        <TextView
            android:id="@+id/bookinfo_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/bookinfo_oolin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/bookinfo_lookre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="리뷰 보기" />

            <Button
                android:id="@+id/bookinfo_writere"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="리뷰 작성" />

            <Button
                android:id="@+id/bookinfo_deletebook"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="삭제" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookinfo_xxlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/bookinfo_purchase"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="구매" />

            <Button
                android:id="@+id/bookinfo_seereview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="리뷰 보기" />

            <Button
                android:id="@+id/bookinfo_regist"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:backgroundTint="#ffffff"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="등록" />

        </LinearLayout>

    </FrameLayout>




</LinearLayout>